{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",    
    "plugin:@typescript-eslint/recommended",
    "plugin:promise/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "promise"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "promise/prefer-await-to-then": "error"
  }
}
